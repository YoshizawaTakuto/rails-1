<div class="edit">
    <div class="container">
        <div class="edit-wrapper wrapper">
            <h3>編集</h3>
            <%= render("shared/partial") %>
            <%= form_for @task do |f| %>
                <table>
                    <tr>
                        <th><%= f.label :title, "予定" %></th>
                        <td><p class="mast">※必須</p><%= f.text_field :title, class:"input" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :start_day, "日付" %></th>
                        <td><p class="mast">※必須</p><%= f.date_field :start_day, class:"input" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :all_day, "終日" %></th>
                        <td><%= f.check_box :all_day, {class:"check-box"}, checked_value = "◯", unchecked_value = "" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :start_time, "開始時間" %></th>
                        <td><p class="mast">※必須</p><%= f.text_field :start_time, class:"input" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :end_time, "終了時間" %></th>
                        <td><%= f.text_field :end_time, class:"input" %></td>
                    </tr>
                    <tr>
                        <th><%= f.label :content, "メモ" %></th>
                        <td><%= f.text_area :content , class:"textarea" %></td>
                    </tr>
                </table>
                <div class="button-wrapper">
                    <%= f.submit "登録" , class:"button" %>
                    <%= link_to("戻る", tasks_path, class:"button") %>
                </div>
            <% end %>
        </div>
    </div>
</div>